---
import Footer from "../components/Footer";
import Header from "../components/Header.tsx";
import { ViewTransitions } from 'astro:transitions';
interface Props {
  title: string;
}

const { title } = Astro.props;

---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/src/assets/img/logo.png" />
    <meta name="AstroRestuarant"
          content='Web donde puedes encontrar tus recetas favoritas. No dudes en visitar este maravilloso sitio'/>
    <link rel="stylesheet" href="/src/assets/global.css"/>
    <title>{title}</title>
    <ViewTransitions />
  </head>
  <body class="layout">
    <Header client:visible/>
    <main class="container mx-auto">
      <slot />
    </main>
    <Footer client:visible />
  </body>
</html>
<script>
  import {initFlowbite} from "flowbite";
  initFlowbite()
</script>

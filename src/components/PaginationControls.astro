---
interface Props{
    page:number
    previousPage:string|undefined,
    nextPage:string|undefined,
}
const {page,previousPage,nextPage}=Astro.props
---
<div class="inline-flex items-center justify-center mt-2 xs:mt-0 gap-x-5 w-full my-5">
    <!-- Buttons -->
    <a href={previousPage}>
        <button class:list={
            ["flex items-center justify-center px-4 h-10 text-base font-medium text-white bg-blue-600 border-0 border-s border-blue-600 rounded-e hover:bg-blue-900 ", {disableBTN: !previousPage}]}>
            <svg class="w-3.5 h-3.5 me-2 rtl:rotate-180" aria-hidden="true" xmlns="http://www.w3.org/2000/svg"
                 fill="none" viewBox="0 0 14 10">
                <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                      d="M13 5H1m0 0 4 4M1 5l4-4"/>
            </svg>
            Prev
        </button>
    </a>
    <span class="text-xl font-semibold text-gray-700 dark:text-gray-400"> Page {page}</span>
    <a href={nextPage}>
        <button class:list={
            ["flex items-center justify-center px-4 h-10 text-base font-medium text-white bg-blue-600 border-0 border-s border-blue-600 rounded-e hover:bg-blue-900 ", {disableBTN: !nextPage}]}>
            Next
            <svg class="w-3.5 h-3.5 ms-2 rtl:rotate-180" aria-hidden="true" xmlns="http://www.w3.org/2000/svg"
                 fill="none" viewBox="0 0 14 10">
                <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                      d="M1 5h12m0 0L9 1m4 4L9 9"/>
            </svg>
        </button>
    </a>
</div>
<style>
    .disableBTN {
        @apply bg-gray-900
    }
</style>
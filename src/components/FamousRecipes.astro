---
import { getRecipes } from "../services/recipes";
import Card from "./Card.astro";
import RecipeTag from "./RecipeTag.astro";
const recipes=await getRecipes("","10");
const recetas=recipes.slice(0,4);
---

<section class="w-full">
    <article>
        <RecipeTag></RecipeTag>
        <div class="flex justify-between mb-10">
            <h1 class="self-center text-4xl font-semibold whitespace-nowrap dark:text-white">Famous<span class="text-orange-400">Recipes</span></h1>
            <button type="button" class="text-gray-900 bg-white border border-gray-300 focus:outline-none hover:bg-gray-100 focus:ring-4 focus:ring-gray-100 font-medium rounded-2xl text-sm px-5 py-2.5 me-2 mb-2 dark:bg-gray-800 dark:text-white dark:border-gray-600 dark:hover:bg-gray-700 dark:hover:border-gray-600 dark:focus:ring-gray-700">Show More</button>
        </div>    
        <div class="flex flex-wrap gap-4 justify-center">
            {recetas.map((recipe)=>(
                <Card name={recipe.name} img={recipe.image} description={recipe.tags}></Card>
                ))}
        </div>
    </article>
    <article class="grid md:grid-cols-2 grid-cols-1 place-items-center my-10">
        <div>
            <h1 class="text-6xl font-bold ">Discover other <br/> recipes</h1>
            <button type="button" class="mt-10 w-full text-white bg-orange-400 hover:bg-orange-700 focus:outline-none focus:ring-4 focus:ring-blue-300 font-medium rounded-full px-5 py-2.5 text-center me-2 mb-2 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800 text-xl">Discover</button>
        </div>
        <div class="grid grid-cols-2 gap-4 mt-6 -rotate-6">
            <div>
                <img src={recipes[4].image} alt="" class="rounded-2xl h-[200px]">
                <img src={recipes[5].image} alt="" class="rounded-2xl h-[200px]">    
            </div>
            <div>
                <img src={recipes[6].image} alt="" class="rounded-2xl h-[200px]">
                <img src={recipes[7].image} alt="" class="rounded-2xl h-[200px]">    
            </div>
            </div>
    </article>
</section>